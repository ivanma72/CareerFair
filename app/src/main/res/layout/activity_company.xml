<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.careerfairapplication.CompanyActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:divider="@color/background_floating_material_dark">
    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="110px"
        android:layout_weight="1.05">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:divider="@color/background_floating_material_dark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/Company"
            android:layout_weight="0.21"
            android:text="CompanyTextTitle"
            android:layout_above="@+id/description"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:text="descriptionText"
            android:layout_weight="0.09"
            android:layout_below="@+id/Company"
            android:layout_above="@+id/majorTl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MajorsTitle"
            android:id="@+id/majorTl"
            android:layout_weight="0.05"
            android:autoText="false"
            android:layout_below="@+id/description"
            android:layout_above="@+id/majorTxt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Majors"
            android:id="@+id/majorTxt"
            android:layout_weight="0.10"
            android:layout_below="@+id/majorTl"
            android:layout_above="@+id/DateTl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DateTitle"
            android:id="@+id/DateTl"
            android:layout_weight="0.05"
            android:layout_below="@+id/majorTxt"
            android:layout_above="@+id/dateTxt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DateTxt"
            android:id="@+id/dateTxt"
            android:layout_weight="0.06"
            android:layout_below="@+id/DateTl"
            android:layout_above="@+id/industryTl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="IndustryTitle"
            android:id="@+id/industryTl"
            android:layout_weight="0.04"
            android:layout_below="@+id/dateTxt"
            android:layout_above="@+id/industryTxt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="industryTxt"
            android:id="@+id/industryTxt"
            android:layout_weight="0.10"
            android:layout_below="@+id/industryTl"
            android:layout_above="@+id/websiteTl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="WebsiteTitle"
            android:id="@+id/websiteTl"
            android:layout_weight="0.08"
            android:layout_below="@+id/industryTxt"
            android:layout_above="@+id/websiteTxt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebsiteText"
            android:id="@+id/websiteTxt"
            android:layout_weight="0.05"
            android:layout_below="@+id/websiteTl"
            android:layout_above="@+id/receptionsTl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ReceptionsTitle"
            android:id="@+id/receptionsTl"
            android:layout_below="@+id/websiteTxt"
            android:layout_above="@+id/receptionsTxt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ReceptionsTxt"
            android:id="@+id/receptionsTxt"
            android:layout_weight="0.07"
            android:layout_below="@+id/receptionsTl"
            android:layout_above="@+id/locationTl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LocationTitle"
            android:id="@+id/locationTl"
            android:layout_below="@+id/receptionsTxt"
            android:layout_above="@+id/locationTxt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LocationTxt"
            android:id="@+id/locationTxt"
            android:layout_weight="0.05"
            android:layout_below="@+id/locationTl"
            android:layout_above="@+id/mapImg"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/mapImg"
            android:layout_below="@+id/locationTxt" />
        </LinearLayout>

    </ScrollView>
    </LinearLayout>

</RelativeLayout>
